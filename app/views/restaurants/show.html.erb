<div class="container mt-5">
  <h1 class="mb-3">Restaurant</h1>
  <div class="card">
    <div class="card-body">
      <h2 class="card-title"><%= @restaurant.name %></h2>
      <p class="card-text">
        <strong>Address:</strong> <%= @restaurant.address %><br>
        <strong>Category:</strong> <%= @restaurant.category %><br>
        <strong>Phone Number:</strong> <%= @restaurant.phone_number %>
      </p>
    </div>
  </div>

  <h2 class="mt-3">Reviews</h2>
  <ul class="list-group">
    <% @restaurant.reviews.each do |review| %>
      <li class="list-group-item"><%= review.content %> (Rating: <%= review.rating %>)</li>
    <% end %>
  </ul>

  <%= link_to "Back to Restaurants", restaurants_path, class: "btn btn-secondary mt-3" %>
</div>

<h1>Review</h1>
<%= simple_form_for([@restaurant, @review]) do |f| %>
  <%= f.input :content %>
   <%= f.input :rating %>
  <%= f.submit "Submit review", class: "btn btn-primary" %>
<% end %>
